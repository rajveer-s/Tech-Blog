<div class="card-group">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title postedby">{{title}} <span>Posted by: {{user.name}} on {{format_time
          date_created}}</span></h5>
      <h5 class="card-text">{{content}}</h5>
    </div>
  </div>
</div>

<h2>Comments:</h2>

{{#each comments}}

<div class="card-group">
  <div class="card">
    <div class="card-body" id="commenttitle">
      <h5 class="card-title">Comment by: {{user.name}}</h5>
      <h4 class="card-text">{{comment_data}}</h4>
    </div>
  </div>
</div>

{{/each}}

<form id="commentform">
  <div class="form-group pb-3">
    <label for="comment" id="commentbox">Enter comment below:</label>
    <textarea type="text" class="form-control" id="commentText" placeholder="Enter your comment here"></textarea>
  </div>
  <button type="submit" class="btn btn-dark" id="subbtn">Submit</button>
</form>



