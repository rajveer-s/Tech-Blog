<!-- Loop over each object in the posts array -->
{{#if logged_in}}
{{#each posts as |p|}}
<div class="card-group">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title postedby">{{p.title}} <span>Posted by: {{p.user.name}} on {{format_time
          p.date_created}}</span></h5>
      <p class="card-text">{{p.content}}</p>
    </div>
    <a href="/posts/{{p.id}}" id="viewComment" class="btn btn-$indigo">Go to Comments</a>
  </div>
</div>
{{/each}}
{{else}}
{{#each posts as |p|}}
<div class="card-group">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title postedby">{{p.title}} <span>Posted by: {{p.user.name}} on {{format_time
          p.date_created}}</span></h5>
      <p class="card-text">{{p.content}}</p>
    </div>
  </div>
</div>
{{/each}}
{{/if}}